  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f3f4f6;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
    }
    .container {
      background-color: #ffffff;
      margin-top: 40px;
      padding: 24px 28px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.08);
      max-width: 420px;
      width: 100%;
    }
    h1 {
      text-align: center;
      margin-top: 0;
      margin-bottom: 16px;
    }
    .field {
      margin-bottom: 14px;
    }
    label {
      display: block;
      font-weight: bold;
      margin-bottom: 4px;
    }
    input[type="text"],
    input[type="email"],
    input[type="password"] {
      width: 100%;
      padding: 8px 10px;
      border-radius: 4px;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }
    .error {
      color: #b91c1c;
      font-size: 0.85rem;
      margin-top: 2px;
    }
    .success {
      color: #166534;
      font-size: 0.9rem;
      margin-top: 8px;
    }
    button {
      width: 100%;
      padding: 10px;
